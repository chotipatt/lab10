<h1>Shop#id</h1>
<p>Welcome</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">user_id</th>
      <th scope="col">name</th>
      <th scope="col">price</th>
      <th scope="col">stock</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @store.each do |item| %>
        <tr>
            <td><%=item.user_id%></td>
            <td><%=item.name%></td>
            <td><%=item.price%></td>
            <td><%=item.stock%></td>
            <%if session[:login] %>
                <td><%= link_to "Buy", main_calculate_path(item: item.id) , class: 'btn btn-primary'%></td>
            <%end%>
        </tr>    
    <%end%>
  </tbody>
</table>